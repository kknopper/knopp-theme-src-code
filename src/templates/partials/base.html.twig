<!DOCTYPE html>
{# Setting Holiday Footer Theme #}    
{% set currentDate = 'now'|date('m/d') %}
{% if currentDate == '03/17' %}
    {% set currentHoliday = 'st-pattys' %}
{% elseif currentDate == '04/01' %}
    {% set currentHoliday = 'easter' %}
{% elseif currentDate == '05/05' %}
    {% set currentHoliday = 'cinco-de-mayo' %}
{% elseif currentDate == '11/23' %}
    {% set currentHoliday = 'thanksgiving' %}
{% elseif currentDate == '12/25' %}
    {% set currentHoliday = 'christmas' %}
{% endif %}    
<html lang="en" class='{{currentHoliday}}'>
    <head>
        {% block head %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% if header.description %}
        <meta name="description" content="{{ header.description }}">
        {% else %}
        <meta name="description" content="{{ site.description }}">
        {% endif %}
        {% if header.robots %}
        <meta name="robots" content="{{ header.robots }}">
        {% endif %}
        <link rel="icon" type="image/png" href="{{ theme_url }}/images/favicon.png">
        <!-- Generate using http://realfavicongenerator.net/ -->
        <link rel="apple-touch-icon" sizes="180x180" href="{{ theme_url }}/images/apple-touch-icon.png">
        <link rel="icon" type="image/png" href="{{ theme_url }}/images/favicon-32x32.png" sizes="32x32">
        <link rel="icon" type="image/png" href="{{ theme_url }}/images/favicon-16x16.png" sizes="16x16">
        <link rel="manifest" href="{{ theme_url }}/images/manifest.json">
        <meta name="theme-color" content="#ef6630">

        <!-- FAVICONS -->
        <!-- Generate using http://realfavicongenerator.net/ -->
        <link rel="apple-touch-icon-precomposed" sizes="57x57" href="{{ theme_url }}/images/favicons/apple-touch-icon-57x57.png" />
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ theme_url }}/images/favicons/apple-touch-icon-114x114.png" />
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ theme_url }}/images/favicons/apple-touch-icon-72x72.png" />
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ theme_url }}/images/favicons/apple-touch-icon-144x144.png" />
        <link rel="apple-touch-icon-precomposed" sizes="60x60" href="{{ theme_url }}/images/favicons/apple-touch-icon-60x60.png" />
        <link rel="apple-touch-icon-precomposed" sizes="120x120" href="{{ theme_url }}/images/favicons/apple-touch-icon-120x120.png" />
        <link rel="apple-touch-icon-precomposed" sizes="76x76" href="{{ theme_url }}/images/favicons/apple-touch-icon-76x76.png" />
        <link rel="apple-touch-icon-precomposed" sizes="152x152" href="{{ theme_url }}/images/favicons/apple-touch-icon-152x152.png" />
        <link rel="icon" type="image/png" href="{{ theme_url }}/images/favicons/favicon-196x196.png" sizes="196x196" />
        <link rel="icon" type="image/png" href="{{ theme_url }}/images/favicons/favicon-96x96.png" sizes="96x96" />
        <link rel="icon" type="image/png" href="{{ theme_url }}/images/favicons/favicon-32x32.png" sizes="32x32" />
        <link rel="icon" type="image/png" href="{{ theme_url }}/images/favicons/favicon-16x16.png" sizes="16x16" />
        <link rel="icon" type="image/png" href="{{ theme_url }}/images/favicons/favicon-128.png" sizes="128x128" />
        <meta name="application-name" content="Home | Kevin Knopp"/>
        <meta name="msapplication-TileColor" content="#FFFFFF" />
        <meta name="msapplication-TileImage" content="{{ theme_url }}/images/favicons/mstile-144x144.png" />
        <meta name="msapplication-square70x70logo" content="{{ theme_url }}/images/favicons/mstile-70x70.png" />
        <meta name="msapplication-square150x150logo" content="{{ theme_url }}/images/favicons/mstile-150x150.png" />
        <meta name="msapplication-wide310x150logo" content="{{ theme_url }}/images/favicons/mstile-310x150.png" />
        <meta name="msapplication-square310x310logo" content="{{ theme_url }}/images/favicons/mstile-310x310.png" />
        <meta name="msapplication-notification" content="frequency=30;polling-uri=http://notifications.buildmypinnedsite.com/?feed=http://www.kevinknopp.com/pages.rss&amp;id=1;polling-uri2=http://notifications.buildmypinnedsite.com/?feed=http://www.kevinknopp.com/pages.rss&amp;id=2;polling-uri3=http://notifications.buildmypinnedsite.com/?feed=http://www.kevinknopp.com/pages.rss&amp;id=3;polling-uri4=http://notifications.buildmypinnedsite.com/?feed=http://www.kevinknopp.com/pages.rss&amp;id=4;polling-uri5=http://notifications.buildmypinnedsite.com/?feed=http://www.kevinknopp.com/pages.rss&amp;id=5;cycle=1" />


        <title>{{ site.title }}{% if header.title %} | {{ header.title }}{% endif %}</title>

        {% block stylesheets %}
            {# Kraken core CSS #}
            {% do assets.add('theme://css/main.css',101) %}
            <!-- {#% do assets.add('system://assets/kraken/css/main.min.css',101) %#} -->

        {# Custom styles for this theme #}
            {% do assets.add('theme://css/kraken-custom.css',100) %}

            {{ assets.css() }}
        {% endblock %}

        

        {% endblock head %}
    </head>

    <body>
        {#<div class="body-wrapper">#}
        
            {# include the header + navigation #}
            {% include 'partials/header.html.twig' %}
        
            <main>
                {% block content %}{% endblock %}
            </main>

            {% include 'partials/footer.html.twig' %}
            {% block javascripts %}
                {% do assets.add('http://cdn.jsdelivr.net/mojs/latest/mo.min.js') %}
                {% do assets.add('theme://js/main.js') %}

                {% if browser.getBrowser == 'msie' and browser.getVersion >= 8 and browser.getVersion <= 9 %}
                    {% do assets.add('https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js') %}
                    {% do assets.add('https://oss.maxcdn.com/respond/1.4.2/respond.min.js') %}
                {% endif %}

                {{ assets.js() }}
            {% endblock %}
        {#</div>#}
    </body>
    {% block bottom %}{% endblock %}
</html>
