<!DOCTYPE html>

{% set currentDate = 'now'|date('m/d') %}
{% if currentDate == '03/17' %}
    {% set currentHoliday = 'st-pattys' %}
{% elseif currentDate == '04/01' %}
    {% set currentHoliday = 'easter' %}
{% elseif currentDate == '05/05' %}
    {% set currentHoliday = 'cinco-de-mayo' %}
{% elseif currentDate == '11/23' %}
    {% set currentHoliday = 'thanksgiving' %}
{% endif %}    
<html lang="en" class='{{currentHoliday}}'>
    <head>
        {% block head %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% if header.description %}
        <meta name="description" content="{{ header.description }}">
        {% else %}
        <meta name="description" content="{{ site.description }}">
        {% endif %}
        {% if header.robots %}
        <meta name="robots" content="{{ header.robots }}">
        {% endif %}
        <link rel="icon" type="image/png" href="{{ theme_url }}/images/favicon.png">
        <!-- Generate using http://realfavicongenerator.net/ -->
        <link rel="apple-touch-icon" sizes="180x180" href="{{ theme_url }}/images/apple-touch-icon.png">
        <link rel="icon" type="image/png" href="{{ theme_url }}/images/favicon-32x32.png" sizes="32x32">
        <link rel="icon" type="image/png" href="{{ theme_url }}/images/favicon-16x16.png" sizes="16x16">
        <link rel="manifest" href="{{ theme_url }}/images/manifest.json">
        <meta name="theme-color" content="#ef6630">

        <title>{% if header.title %}{{ header.title }} | {% endif %}{{ site.title }}</title>

        {% block stylesheets %}
            {# Kraken core CSS #}
            {% do assets.add('theme://css/main.css',101) %}
            <!-- {#% do assets.add('system://assets/kraken/css/main.min.css',101) %#} -->

        {# Custom styles for this theme #}
            {% do assets.add('theme://css/kraken-custom.css',100) %}

            {{ assets.css() }}
        {% endblock %}

        

        {% endblock head %}
    </head>

    <body>
        {# include the header + navigation #}
        {% include 'partials/header.html.twig' %}
       
        <main>
            {% block content %}{% endblock %}
        </main>

        {% include 'partials/footer.html.twig' %}
        {% block javascripts %}
            {% do assets.add('http://cdn.jsdelivr.net/mojs/latest/mo.min.js') %}
            {% do assets.add('theme://js/main.js') %}

            {% if browser.getBrowser == 'msie' and browser.getVersion >= 8 and browser.getVersion <= 9 %}
                {% do assets.add('https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js') %}
                {% do assets.add('https://oss.maxcdn.com/respond/1.4.2/respond.min.js') %}
            {% endif %}

            {{ assets.js() }}
        {% endblock %}
    </body>
    {% block bottom %}{% endblock %}
</html>
