{% extends 'partials/base.html.twig' %}

{% block content %}
	<section class="portfolio container">
		<ul class="portfolio-tag-list">
			<li><a data-filter="all" class="tag theme-color-bg"><i class="fa fa-tag"></i>All</a></li>
			<li><a data-filter=".dev" class="tag theme-color-bg"><i class="fa fa-tag"></i>Development</a></li>
			<li><a data-filter=".des" class="tag theme-color-bg"><i class="fa fa-tag"></i>Design</a></li>
		</ul>
		<ul class="portfolio-grid" id='portfolio-grid'>
			{% set collection = page.collection() %}

			{% for child in collection %}
			    {% include 'partials/portfolio_item.html.twig' with {'page':child, 'truncate':true} %}
			{% endfor %}
		</ul>
	</section>
	<div class="overlay theme-color-bg-secondary">
		<i class="overlay-close fa fa-close theme-color-secondary"></i>
		<div class="overlay-content"></div>
	</div>
    
{% endblock %}
